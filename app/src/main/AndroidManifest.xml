<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.amazingamazigh.amazigh" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/_general_logo"
        android:label="AmazighQuiz"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".About"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_intro"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizScreen"
            android:label="@string/title_activity_quiz_screen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ScoreScreen"
            android:label="@string/title_activity_score_screen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Practice"
            android:label="@string/title_activity_practice"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Category"
            android:label="@string/title_activity_category"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LeaderboardScreen"
            android:label="@string/title_activity_leaderboard_screen"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
